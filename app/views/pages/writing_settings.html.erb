<!DOCTYPE html>
<html>
<head>
  <title>Writing Settings</title>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
  <h1>Writing Settings</h1>
  
  <p>Writing Duration (minutes):</p>
  <input type="range" min="5" max="30" step="5" value="5" id="duration" onchange="updateSliderValue()">
  <p id="duration_value">5 minutes</p>

  <form action="/prompt_generator" method="get">
    <button type="submit" id="generate_prompt" class="btn btn-primary">Generate Prompt</button>
  </form>

  <form action="/writing_session" method="get">
    <button type="submit" id="start_writing" class="btn btn-primary">Start Writing</button>
  </form>
  
  <script>
    function updateSliderValue() {
      var slider = document.getElementById("duration");
      var output = document.getElementById("duration_value");
      output.innerHTML = slider.value + " minutes";
    }
  </script>
</body>
</html>
